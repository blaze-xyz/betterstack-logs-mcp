{
  "name": "@blaze-money/betterstack-logs-mcp",
  "version": "1.0.4",
  "description": "MCP server for querying and analyzing Betterstack logs via npx",
  "license": "MIT",
  "author": "Blaze",
  "type": "module",
  "keywords": [
    "mcp",
    "betterstack",
    "logs",
    "claude",
    "model-context-protocol"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/blaze-xyz/betterstack-logs-mcp.git"
  },
  "homepage": "https://github.com/blaze-xyz/betterstack-logs-mcp#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "bin": {
    "betterstack-logs-mcp": "dist/src/index.js"
  },
  "files": [
    "dist/src/**/*",
    "dist/scripts/**/*",
    "README.md",
    "LICENSE",
    "claude-config-example.json"
  ],
  "scripts": {
    "clean": "shx rm -rf dist",
    "build": "npm run clean && tsc && shx chmod +x dist/src/index.js dist/scripts/*.js",
    "prepare": "npm run build",
    "prepublishOnly": "npm run build && npm test",
    "watch": "tsc --watch",
    "dev": "tsc --watch",
    "inspect": "node --inspect dist/src/index.js",
    "debug": "npm run build && node --inspect dist/src/index.js --transport http --port 3000",
    "run": "npm run build && node dist/src/index.js --transport http --port 3000",
    "test": "vitest",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "test:e2e": "vitest run tests/e2e",
    "test:performance": "vitest run tests/performance",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:ci": "vitest run --coverage --reporter=verbose",
    "test:manual": "npm run build && node dist/scripts/run-manual-tests.js",
    "test:manual:list": "npm run test:manual -- --list",
    "test:manual:verbose": "npm run test:manual -- --verbose",
    "test:real-mcp": "npm run build && node dist/scripts/run-real-mcp-tests.js",
    "test:real-mcp:list": "npm run test:real-mcp -- --list"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.15.0",
    "axios": "^1.10.0",
    "csv-stringify": "^6.5.2",
    "dotenv": "^16.6.1",
    "express": "^4.21.2",
    "p-limit": "^5.0.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@faker-js/faker": "^9.9.0",
    "@types/express": "^4.17.21",
    "@types/node": "^20.19.9",
    "@vitest/ui": "^3.2.4",
    "c8": "^10.1.3",
    "msw": "^2.10.4",
    "shx": "^0.3.4",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  },
  "packageManager": "yarn@4.6.0+sha256.eaf1eeabc164a44ca0b65dbdccd54af7e55f3ff9294b3ff318d5aaec92f2b20b"
}
