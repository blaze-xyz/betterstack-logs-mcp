# Betterstack ClickHouse Credentials (for log queries)
# Get these from: Dashboards → Connect remotely → Create connection
BETTERSTACK_CLICKHOUSE_USERNAME=your_clickhouse_username
BETTERSTACK_CLICKHOUSE_PASSWORD=your_clickhouse_password
BETTERSTACK_CLICKHOUSE_QUERY_ENDPOINT=your_clickhouse_endpoint_url

# Betterstack API Token (for source management)
# Get this from: Settings → API Tokens → Telemetry API
BETTERSTACK_API_TOKEN=your_api_token_from_betterstack_dashboard

# API Endpoints (optional - defaults provided)
BETTERSTACK_TELEMETRY_ENDPOINT=https://telemetry.betterstack.com

# Default Source Configuration (optional)
BETTERSTACK_DEFAULT_SOURCE_GROUP=production
# Alternative: comma-separated source IDs or names
# BETTERSTACK_DEFAULT_SOURCES=123456,789012

# Cache Settings (optional)
CACHE_TTL_SECONDS=300