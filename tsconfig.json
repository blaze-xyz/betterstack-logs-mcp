{
  "compilerOptions": {
    "target": "ES2022",
    "module": "Node16",
    "moduleResolution": "Node16",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "rootDir": "./"
  },
  "include": [
    "src/**/*", 
    "scripts/run-manual-tests.ts",
    "tests/helpers/**/*"
  ],
  "exclude": ["node_modules", "dist", "tests/unit/**/*", "tests/integration/**/*", "tests/e2e/**/*", "tests/performance/**/*"]
}
